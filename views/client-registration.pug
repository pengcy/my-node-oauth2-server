extends layout

block content
  .container
    form.form-signin(method='post', action='/add-client', role='form')
      h2.form-signin-heading Create a client
      .form-group
        input.form-control(name='redirectUri', type='text', placeholder='Redirect URI')
      .form-group
        button.btn.btn-lg.btn-primary.btn-block(type='submit') Register
